<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for account.move.line -->
    <record id="view_move_line_form_custom_tax" model="ir.ui.view">
        <field name="name">account.move.line.form.custom.tax</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_unit']" position="after">
                <field name="custom_tax_percentage" />
            </xpath>
        </field>
    </record>

</odoo>